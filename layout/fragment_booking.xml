<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#271753"
        tools:context=".ui.booking.BookingFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationViewbook"
            android:layout_width="133dp"
            android:layout_height="100dp"
            android:layout_marginBottom="72dp"
            android:background="#271753"
            android:backgroundTint="#271753"
            android:cropToPadding="true"
            android:paddingTop="-10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/fnameb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/googleiconsflights" />

        <TextView
            android:id="@+id/booking_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#DCA173"
            android:padding="5dp"
            android:text="Enter the Details for Booking"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/fnameb"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawableStart="@drawable/ic_baseline_person"
            android:drawablePadding="6dp"
            android:drawingCacheQuality="high"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHighlight="#DC8348"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#E88645"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/booking_details" />

        <EditText
            android:id="@+id/lnameb"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/booking_details" />


        <EditText
            android:id="@+id/mailb"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawableStart="@drawable/ic_baseline_email"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fnameb" />

        <EditText
            android:id="@+id/arrival"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawableStart="@drawable/ic_baseline_flight_land_24"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Arrival"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/departure" />

        <EditText
            android:id="@+id/departure"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawableStart="@drawable/ic_baseline_flight_takeoff_24"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Departure"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactb" />

        <EditText
            android:id="@+id/departureb"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Departure Date"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrival" />

        <EditText
            android:id="@+id/arrivalb"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Arrival Date"
            android:inputType="date"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/departureb" />

        <Button
            android:id="@+id/bookticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="76dp"
            android:backgroundTint="#34CA81"
            android:hint="Register"
            android:text="Book Ticket"
            android:textAlignment="center"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFDFD"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/selectd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_date_range"
            android:backgroundTint="@color/teal_700"
            android:backgroundTintMode="add"
            android:drawableStart="@drawable/ic_baseline_date_range"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:iconTint="#3A2323"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrival"
            app:rippleColor="#BD6B6B"
            app:strokeColor="#852F2F" />

        <Button
            android:id="@+id/selecta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_date_range"
            android:backgroundTint="@color/teal_700"
            android:backgroundTintMode="add"
            android:drawableStart="@drawable/ic_baseline_date_range"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            app:iconTint="#3A2323"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectd"
            app:rippleColor="#BD6B6B"
            app:strokeColor="#852F2F" />

        <EditText
            android:id="@+id/contactb"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawableStart="@drawable/ic_baseline_phone"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="Mobile No"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="?android:textColorPrimary"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mailb" />

        <Spinner
            android:id="@+id/triptype"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noofpassenger" />

        <Spinner
            android:id="@+id/passenger"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triptype" />

        <Spinner
            android:id="@+id/economy"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passenger" />

        <Spinner
            android:id="@+id/payment"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/economy" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Flight Booking"
            android:textAlignment="center"
            android:textColor="#ECF1EE"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/lottieAnimationViewbook"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="#E4D6D6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookticket">


            <TextView
                android:id="@+id/flightschetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/flight_schedule"
                android:textAlignment="viewStart"
                android:textColor="#252424"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flightschetextpara" />

            <TextView
                android:id="@+id/flightschetextpara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="220dp"
                android:padding="4dp"
                android:text="Indian Flight Schedules"
                android:textAlignment="center"
                android:textColor="#252424"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/from"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bookingradius"
                android:backgroundTint="#2C9DCF"
                android:drawableStart="@drawable/ic_baseline_flight_takeoff_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="From"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flightschetext" />

            <EditText
                android:id="@+id/to"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bookingradius"
                android:backgroundTint="#2C9DCF"
                android:drawableStart="@drawable/ic_baseline_flight_land_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="To"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/from" />

            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#34CA81"
                android:text="View Schedules"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="#FFFDFD"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/to"
                app:layout_constraintVertical_bias="0.37" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/noofpassenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bookingradius"
            android:backgroundTint="#2C9DCF"
            android:drawableStart="@drawable/ic_baseline_accessibility_24"
            android:drawablePadding="6dp"
            android:ems="10"
            android:hint="No of Passengers"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrivalb" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>